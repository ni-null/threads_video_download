{
  "manifest_version": 3,
  "name": "Threads 影片下載器",
  "version": "1.0",
  "description": "從 Threads.com 自動擷取並下載媒體檔案",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://www.threads.com/*",
    "https://*.fbcdn.net/*",
    "https://*.cdninstagram.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.threads.com/*"
      ],
      "js": [
        "jszip.min.js",
        "modules/utils.js",
        "modules/download-button.js",
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
