{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "1.0.0",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "permissions": ["activeTab", "scripting", "storage", "downloads"],
  "host_permissions": ["https://www.threads.com/*", "https://*.fbcdn.net/*", "https://*.cdninstagram.com/*"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "__MSG_extName__"
  },
  "content_scripts": [
    {
      "matches": ["https://www.threads.com/*"],
      "js": ["lib/jszip.min.js", "modules/utils.js", "modules/filename-generator.js", "modules/download-button.js", "modules/media-position-finder.js", "modules/media-overlay-button.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["image/*", "_locales/*/messages.json"],
      "matches": ["https://www.threads.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
